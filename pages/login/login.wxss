/* pages/login/login.wxss */

.login{
  width:100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.get-info{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: left;
}
.logo{
  width: 204rpx;
  height: 204rpx;
  text-align: center;
}
.get-title{
  width: 100%;
  font-size: 32rpx;
  margin: 70rpx auto 38rpx;
}
.get-item{
  width: 100%;
  font-size: 24rpx;
  font-weight:500;
  margin-bottom:30rpx;
  color: rgba(0,0,0,.65); 
}
.get-tip{
  font-size:24rpx;
  font-weight:300;
  margin-top: 60rpx;
  color: rgba(0,0,0,.65); 
}
.get-userinfo{
  width:514rpx;
  height:100rpx;
  background:rgba(20,111,209,1);
  color:#fff;
  box-shadow:0px 0px 40px 0px rgba(0,0,0,0.25);
  border-radius:63rpx;
}

