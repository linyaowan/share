/* pages/personalCenter/personalCenter.wxss */
.userinfo-avatar{
  width: 68rpx;
  height: 68rpx;
}
.navigator-box {
  position: relative;
  line-height: 1.41176471;
  font-size: 34rpx;
  transition: .3s;
  margin: 36rpx;
  padding: 20rpx 0;
  background: #fff;
  box-shadow:0px 0px 40rpx 0px rgba(0,0,0,0.1);
  border-radius:40rpx;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.list-right{
  padding-right: 60rpx;
}
.navigator-arrow {
  padding-right: 60rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
